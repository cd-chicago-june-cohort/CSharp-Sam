<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerce</title>
    
    <link rel="stylesheet" href="https://bootswatch.com/darkly/bootstrap.min.css"
            asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.css"
            asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="row header">
        <div class="col-md-2 col-md-offset-1"><a href="/"><button class="btn btn-info">Dashboard</button></a></div>
        <div class="col-md-2"><a href="/products"><button class="btn btn-info">Products</button></a></div>
        <div class="col-md-2"><a href="/orders"><button class="btn btn-info">Orders</button></a></div>
        <div class="col-md-2"><a href="/customers"><button class="btn btn-info">Customers</button></a></div>
        <div class="col-md-2"><button class="btn btn-info">Settings</button></div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
        
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.js"
                asp-fallback-test="window.jQuery">
        </script>
        
        
        <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
