@model Weddings.Models.User

@{
    ViewData["Title"] = "Home Page";
}
<div class="container-fluid">
    <div class="row">
        <div class="left col-md-6">

<div class='col-md-4 col-md-offset-4'>
            <h1 class='text-center'>Registration</h1>
            <div class="error">@ViewBag.existing</div>
            <form asp-controller="Home" asp-action="Register" method='post'>
                <div class="form-group row">
                    <label for="first" class="col-1 col-form-label">First Name:</label>
                    <div class="col-4"><input asp-for="first" class="form-control"></div>
                    <span asp-validation-for="first"></span>
                    <label for="last" class="col-1 col-form-label">Last Name:</label>
                    <div class="col-4"><input asp-for="last" class="form-control"></div>
                    <span asp-validation-for="last"></span>
                    <label for="email" class="col-1 col-form-label">Email:</label>
                    <div class="col-4"><input asp-for="email" class="form-control"></div>
                    <span asp-validation-for="email"></span>
                    <label for="password" class="col-1 col-form-label">Password:</label>
                    <div class="col-4"><input asp-for="password" class="form-control" type="password"></div>
                    <span asp-validation-for="password"></span>
                    <label for="confirm" class="col-1 col-form-label">Confirm Password:</label>
                    <div class="col-4"><input name="confirm" class="form-control" type="password"></div>
                    <div class="col-4"><input class="btn btn-primary register" type="submit" value='Register'></div>
                </div>
            </form>
        </div> 
        </div>
        <div class="right col-md-6">
            
<div class='col-md-4 col-md-offset-4'>
            <h1 class='text-center'>Login</h1>
            <div class="error">@ViewBag.notExisting</div>
            <div class="error">@ViewBag.incorrectPW</div>
            <form action='Process' method='post'>
                <div class="form-group row">
                    <label for="email" class="col-1 col-form-label">Email:</label>
                    <div class="col-4"><input class="form-control" type="text" name="email"></div>
                    <label for="password" class="col-1 col-form-label">Password:</label>
                    <div class="col-4"><input class="form-control" type="password" name="password"></div>
                    <div class="col-4"><input class="btn btn-primary login" type="submit" value='Login'></div>
                </div>
            </form>
        </div>

        </div>
    </div>
</div>