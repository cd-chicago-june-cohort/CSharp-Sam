@model DojoLeague.Models.Dojo

@{
    ViewData["Title"] = "Dojos";
}
<div class="container-fluid">
<div class="row">
  <!-- LEFT SIDE -->
  <div class="col-md-6">
    <h1>Registered Dojos</h1>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Dojo Name</th>
        </tr>
      </thead>
      <tbody>
          @{
              foreach(var dojo in @ViewBag.dojos){
                  <tr><td><a href="/dojo/@dojo.Id">@dojo.Name</a></td></tr>
              }
          }
      </tbody>
    </table>
  </div>
  <!-- RIGHT SIDE -->
  <div class="col-md-6">
    <h1>Register a Dojo</h1>
    <form asp-controller="Home" asp-action="CreateDojo" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name"/>
            <p><span asp-validation-for="Name"></span></p>
        </div>
        <div class="form-group">
            <label asp-for="Location"></label>
            <input class="form-control" asp-for="Location"/>
            <p><span asp-validation-for="Location"></span></p>
        </div>
        <div class="form-group">
            <label asp-for="Info">Additional Dojo Information</label>
            <textarea class="form-control" asp-for="Info"></textarea>
            <p><span asp-validation-for="Info"></span></p>
        </div>
        <button type="submit" class="btn btn-info">Register</button>
    </form>
  </div>
</div>
</div>