@model DojoLeague.Models.Ninja

@{
    ViewData["Title"] = "Ninjas";
}
<div class="container-fluid">
<div class="row">
  <!-- LEFT SIDE -->
  <div class="col-md-6">
    <h1>Registered Ninjas</h1>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Ninja Name</th>
          <th>Home Dojo</th>
        </tr>
      </thead>
      <tbody>
        @{
          foreach(var ninj in @ViewBag.dojoNinjas){
            <tr>
              <td><a href="ninja/@ninj.ninja_id">@ninj.ninja_name</a></td>
              <td><a href="dojo/@ninj.dojo_id">@ninj.dojo_name</a></td>
            </tr>
          }
          foreach(var rogue in @ViewBag.rogues){
            <tr>
              <td><a href="ninja/@rogue.Id">@rogue.Name</a></td>
              <td>Rogue</td>
            </tr>
          }
        }
      </tbody>
    </table>
  </div>
  <!-- RIGHT SIDE -->
  <div class="col-md-6">
    <h1>Register a Ninja</h1>
    <form asp-controller="Home" asp-action="CreateNinja" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name"/>
            <p><span asp-validation-for="Name"></span></p>
        </div>

        <div class="form-group">
            <label asp-for="Level"></label>
            <select class="form-control" asp-for="Level">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
              <option value="9">9</option>
              <option value="10">10</option>
            </select>
            <p><span asp-validation-for="Level"></span></p>
        </div>

        <div class="form-group">
            <label for="myDojo">Assigned Dojo?</label>
            <select class="form-control" name="myDojo">
              <option>Rogue</option>
              @{
                foreach(var dojo in @ViewBag.dojos){
                  <option value=@dojo.Id>@dojo.Name</option>
                }
              }
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Description">Optional Description</label>
            <textarea class="form-control" asp-for="Description"></textarea>
            <p><span asp-validation-for="Description"></span></p>
        </div>
        <button type="submit" class="btn btn-info">Register</button>
    </form>
  </div>
</div>
</div>